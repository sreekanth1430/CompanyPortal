@model CompanyPortal.Models.TblLink
@{
    var link = ViewData["Link"] as CompanyPortal.Models.TblLink ?? new CompanyPortal.Models.TblLink();
}

<style>
    .no-margin-padding {
        margin: 0;
        padding: 0;
    }
</style>

<br />
<div class="middle-wrap mb-5 no-margin-padding">
    <div class="container pb-5 no-margin-padding">
        <div class="employee-dashboard bg-white p-lg-5 p-4 no-margin-padding">
            <div class="page-title mb-4">
                <h1 class="green-color">Team Members</h1>
            </div>
            <div class="form-sec">
                <div class="row no-margin-padding">
                    <div class="tab-card-sec">
                        <div class="page-title">
                            <h2>Employees</h2>
                        </div>
                        <div class="tab-card">
                            <!-- Grid -->
                            <div class="table-responsive">
                                <table class="table">
                                    <thead style="background-color: #212529; color: #fff;">
                                        <tr>
                                            <th>Title</th>
                                            <th>URL</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in ViewData["Links"] as IEnumerable<CompanyPortal.Models.TblLink>)
                                        {
                                            <tr>
                                                <td>@item.Title</td>
                                                <td>@item.Url</td>
                                                <td>
                                                    <a asp-action="LinkIndex" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                                                    <a asp-action="LinkDelete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<h3>@(Model.Id == 0 ? "Create" : "Edit") Link</h3>

<form asp-action="@(Model.Id == 0 ? "LinkCreate" : "LinkEdit")">
    <input type="hidden" asp-for="@Model.Id" />
    <div class="form-group">
        <label>Title</label>
        <input asp-for="@Model.Title" class="form-control" />
    </div>
    <div class="form-group">
        <label>URL</label>
        <input asp-for="@Model.Url" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>