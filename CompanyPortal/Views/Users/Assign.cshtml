@model CompanyPortal.Models.TblUser

@{
    ViewData["Title"] = "Assign";
}

<h2>Assign User to Group</h2>

<form asp-action="Assign" asp-route-id="@Model.UserId">
    <div class="form-group">
        <label asp-for="UserName" class="control-label"></label>
        <input asp-for="UserName" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="CompanyId" class="control-label"></label>
        <input asp-for="CompanyId" class="form-control" disabled />
        <span asp-validation-for="CompanyId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="control-label">User Group</label>
        <select name="groupId" asp-items="@((SelectList)ViewData["UserGroups"])" class="form-control"></select>
    </div>

    <div class="form-group">
        <input type="submit" value="Assign" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}