@model IEnumerable<CompanyPortal.Models.TblUser>

@{
    ViewData["Title"] = "Index";
}

<style>
    .no-margin-padding {
        margin: 0;
        padding: 0;
    }
</style>

<div class="middle-wrap mb-5 no-margin-padding">
    <div class="container pb-5 no-margin-padding">
        <div class="employee-dashboard bg-white p-lg-5 p-4 no-margin-padding">
            <div class="page-title mb-4 d-flex justify-content-between align-items-center">
                <h1 class="green-color">Users</h1>
                <a asp-action="Create" class="btn btn-success mb-0">Create New</a>
            </div>
            <div class="form-sec">
                <div class="row no-margin-padding">
                    <div class="tab-card-sec">
                        <div class="page-title">
                            <h2>Manage Users</h2>
                        </div>
                        <div class="tab-card">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead style="background-color: #212529; color: #fff;">
                                        <tr>
                                            <th>@Html.DisplayNameFor(model => model.UserName)</th>
                                            <th>@Html.DisplayNameFor(model => model.CompanyId)</th>
                                            <th>Company Name</th>
                                            <th>Group Id</th>
                                            <th>Group Name</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                                                <td>@Html.DisplayFor(modelItem => item.CompanyId)</td>
                                                <td>@Html.DisplayFor(modelItem => item.Company.CompanyName)</td>
                                                <td>@Html.DisplayFor(modelItem => item.UserGroupMapping.FirstOrDefault().UserGroup.GroupId)</td>
                                                <td>@Html.DisplayFor(modelItem => item.UserGroupMapping.FirstOrDefault().UserGroup.GroupName)</td>
                                                <td>
                                                    <a asp-action="Assign" asp-route-id="@item.UserId" class="btn btn-primary">Edit</a>
                                                    <a asp-action="Details" asp-route-id="@item.UserId" class="btn btn-info" disabled style="background-color: #ccc; color: #666;">Details</a>
                                                    <a asp-action="Delete" asp-route-id="@item.UserId" class="btn btn-danger" disabled style="background-color: #ccc; color: #666;">Delete</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>